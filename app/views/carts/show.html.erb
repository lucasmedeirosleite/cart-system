<div class="row">
  <div class="col s12">
    <h2 class="header">Items in your cart</h2>

    <table class="bordered highlight responsive-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Quantity</th>
          <th>Unit price</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% if current_cart.items.present? %>
          <% current_cart.items.each do |item| %>
            <%= render partial: 'carts/item', locals: { item: item } %>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6">Your cart is empty</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col s6">
    <div class="left-align">
      <%= "Total to pay: #{number_to_currency(current_cart.total, precision: 2, locale: :en)}" %>
    </div>
  </div>

  <div class="col s6">
    <div class="right-align">
      <%= link_to purchase_cart_path,
                  method: :patch,
                  data: { confirm: 'Are you sure?' },
                  class: 'waves-effect waves-light btn' do %>
          <i class="material-icons left">send</i>Purchase
      <% end %>
    </div>
  </div>
</div>
