<tr>
  <td><%= item.id %></td>
  <td><%= item.product.name %></td>
  <td><%= item.quantity %></td>
  <td><%= number_to_currency(item.product.price, precision: 2, locale: :en) %></td>
  <td><%= number_to_currency(item.total, precision: 2, locale: :en) %></td>
  <td>
    <%= link_to 'Edit', edit_cart_item_path(item) %> |
    <%= link_to 'Remove',
                cart_item_path(item),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
