<div class="row">
  <%= form_for(resource,
               as: resource_name,
               url: session_path(resource_name),
               html: { class: 'col s6 offset-s3' }) do |f| %>

    <h3 class="header">Log in</h3>

    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, autofocus: true %>
        <%= f.label :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password, autocomplete: 'off' %>
        <%= f.label :password %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.button class: 'btn waves-effect waves-light' do %>
          Login <i class="material-icons right">send</i>
        <% end %>
      </div>
    </div>
  <% end%>
</div>
